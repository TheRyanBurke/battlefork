<!DOCTYPE html>
<html>
<head>
  <title>Battlefork</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<h1>Battlefork</h1>

<% if session[:user_id] %>
Logged in as: <%= User.find(session[:user_id]).username %><br />
<%= link_to "My Profile", user_path(User.find(session[:user_id])) %> | <%= link_to "Logout", logout_path, :method => :delete %>
<% else %>
<%= link_to "Login", login_path %>
<% end %>

<%= yield %>

</body>
</html>
